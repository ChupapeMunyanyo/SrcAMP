{
  "compilerOptions": {
    /* Базовые настройки */
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "types": ["vite/client"],

    /* JSX */
    "jsx": "react-jsx",
    "jsxImportSource": "react",

    /* Пути и модули */
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"]
    },
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,

    /* Проверки типов */
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": false,

    /* Генерация кода */
    "isolatedModules": true,
    "noEmit": true,
    "allowJs": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.spec.ts",
    "**/__tests__/*",
    "src/Algorism"  // Исключаем проблемную папку
  ]
}
